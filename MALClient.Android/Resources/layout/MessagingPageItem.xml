<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:foreground="?selectableItemBackground"
    android:layout_height="wrap_content" android:clickable="true" android:focusable="true"
    android:background="?BrushAnimeItemBackground" android:padding="5dp">
  <LinearLayout
      android:layout_width="match_parent" android:minHeight="70dp"
      android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="100dp" android:orientation="vertical"
        android:layout_height="match_parent" android:padding="5dp">
      <TextView
          android:layout_width="wrap_content" android:id="@+id/MessagingPageItemSender"
          android:layout_height="wrap_content" android:text="MALCLientTestAcc" android:ellipsize="end" android:maxLines="2" android:textColor="?BrushText"/>
      <ImageView android:layout_alignParentBottom="true" android:id="@+id/MessagingPageItemStateSymbol"
          android:layout_width="20dp"
          android:layout_height="20dp" android:src="@drawable/icon_message_alt"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp" android:orientation="vertical" android:layout_weight="1"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView android:id="@+id/MessagingPageItemTitle"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="The messages are crashing" android:textSize="@dimen/FontSizeMedium" android:textColor="?AccentColourDark" />
        <TextView android:id="@+id/MessagingPageItemDate"
            android:layout_width="wrap_content" android:text="Feb 26, 2017" android:textColor="?BrushNoSearchResults" android:fontFamily="@string/font_family_light" android:textStyle="italic"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginStart="5dp"/>
      </LinearLayout>
      <View style="@style/Divider" android:layout_margin="5dp"/>
      <TextView android:id="@+id/MessagingPageItemContent"
          android:layout_width="wrap_content" android:textColor="?BrushText"
          android:layout_height="wrap_content" android:text="fdgdfgww"/>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>