<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="?BrushDeepBackground">
  <ScrollView
    android:layout_width="match_parent" android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true">
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
        android:layout_width="match_parent" android:background="?BrushDetailsUpperBackground"
        android:layout_height="200dp" android:orientation="horizontal">
        <RelativeLayout android:layout_width="135dp" android:layout_height="wrap_content" android:elevation="5dp">
          <FFImageLoading.Views.ImageViewAsync android:id="@+id/CharacterDetailsPageImage"
                                               android:layout_width="match_parent" android:scaleType="fitEnd"
                                               android:layout_height="match_parent" />
          <MALClient.Android.UserControls.FavouriteButton  android:layout_height="40dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" android:layout_width="40dp" android:id="@+id/CharactersPageFavButton"/>
        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent" android:orientation="vertical">
          <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="0dp" android:padding="5dp">
            <TextView android:id="@+id/CharacterDetailsPageDescription"
                      android:layout_width="match_parent" android:text="Member favourites: -1"
                      android:layout_height="wrap_content" android:textColor="?BrushText"/>
          </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
      </LinearLayout>
      <FrameLayout
        android:layout_width="match_parent" android:layout_gravity="end" android:background="?BrushAppBars"
        android:layout_height="wrap_content" android:gravity="center_vertical">
        <ImageButton android:id="@+id/CharacterDetailsPageLinkButton"
                     android:layout_width="35dp" android:layout_gravity="center_vertical"
                     android:layout_height="35dp" android:background="?selectableItemBackground" android:src="@drawable/icon_globe"/>
        <Button android:id="@+id/CharacterDetailsPageSpoilerButton" android:layout_gravity="end" android:textColor="#fff"
                android:layout_width="wrap_content" android:backgroundTint="?AccentColourDark" android:text="Spoiler" android:textAllCaps="false"
                android:layout_height="wrap_content" style="style/inc" android:padding="2dp" android:minHeight="40dp"/>
      </FrameLayout>
      <TextView
        android:layout_width="wrap_content" android:textSize="@dimen/FontSizeHuge"
        android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" android:text="Voice Actors" android:layout_gravity="center_horizontal" android:layout_margin="10dp" android:textColor="?AccentColour"/>
      <MALClient.Android.UserControls.HeightAdjustingGridView
        android:layout_width="wrap_content" android:id="@+id/CharacterDetailsPageVoiceActorsGrid" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
      <!--<TextView
                            android:layout_width="wrap_content" android:id="@+id/CharacterDetailsPageVoiceActorsEmptyNotice"
                            android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" android:text="No data..." android:layout_gravity="center_horizontal" android:textColor="?BrushNoSearchResults"/>-->
      <TextView
        android:layout_width="wrap_content" android:textSize="@dimen/FontSizeHuge"
        android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" android:text="Animeography" android:layout_gravity="center_horizontal" android:layout_margin="10dp" android:textColor="?AccentColour"/>
      <MALClient.Android.UserControls.HeightAdjustingGridView
        android:layout_width="wrap_content" android:id="@+id/CharacterDetailsPageAnimeographyGrid" android:layout_gravity="center_horizontal" android:gravity="center"
        android:layout_height="wrap_content" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
      <TextView
        android:layout_width="wrap_content" android:id="@+id/CharacterDetailsPageAnimeographyEmptyNotice"
        android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" android:text="No data..." android:layout_gravity="center_horizontal" android:textColor="?BrushNoSearchResults"/>
      <TextView
        android:layout_width="wrap_content" android:textSize="@dimen/FontSizeHuge"
        android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" android:text="Mangaography" android:layout_gravity="center_horizontal" android:layout_margin="10dp" android:textColor="?AccentColour"/>
      <MALClient.Android.UserControls.HeightAdjustingGridView
        android:layout_width="wrap_content" android:id="@+id/CharacterDetailsPageMangaographyGrid" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
      <TextView
        android:layout_width="wrap_content" android:id="@+id/CharacterDetailsPageMangaographyEmptyNotice"
        android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" android:text="No data..." android:layout_gravity="center_horizontal" android:textColor="?BrushNoSearchResults"/>
    </LinearLayout>
  </ScrollView>

  <RelativeLayout android:visibility="gone" android:id="@+id/CharacterDetailsPageLoadingSpinner"
                  android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="?BrushLoading">
    <ProgressBar android:layout_width="wrap_content" android:indeterminateTint="?AccentColour"
                 android:indeterminateTintMode="src_in" android:layout_height="wrap_content"
                 android:indeterminate="true" android:layout_centerInParent="true" />
  </RelativeLayout>
</RelativeLayout>