<?xml version="1.0" encoding="utf-8"?>
<MALClient.Android.UserControls.ScrollableSwipeToRefreshLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?BrushTextInverted">
  <FrameLayout android:layout_width="match_parent"
               android:layout_height="match_parent">
    <ListView
      android:id="@+id/ListView"
      android:layout_width="match_parent"
      android:layout_gravity="top"
      android:layout_height="match_parent"
      android:choiceMode="singleChoice"
      android:dividerHeight="5dp" android:divider="@color/Transparent" />
    <ProgressBar
      android:layout_width="wrap_content" android:id="@+id/LoadingSpinner"
      android:layout_height="wrap_content"
      android:indeterminate="true" android:layout_gravity="center" />
    <TextView android:gravity="center" android:visibility="gone"
              android:layout_width="wrap_content" android:id="@+id/EmptyNotice"
              android:layout_height="wrap_content" android:fontFamily="@string/font_family_light" 
              android:text="Nothing to show here..." android:layout_gravity="center" 
              android:textColor="?AccentColour"/>
  </FrameLayout>
</MALClient.Android.UserControls.ScrollableSwipeToRefreshLayout>