<LinearLayout android:layout_width="match_parent"
    android:background="@drawable/inc_dec_btn_backgroud" android:clickable="true" android:focusable="true"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="35dp" android:background="?AccentColourDark">
    <TextView android:layout_gravity="center_vertical"
        android:layout_width="wrap_content" android:textColor="#fff" android:textSize="@dimen/FontSizeBig" android:layout_marginStart="10dp"
        android:layout_height="wrap_content" android:text="New update! What's new?" />
    <ImageButton android:id="@+id/ChangelogDialogCloseButton" android:tint="#fff"
        android:layout_width="wrap_content" android:background="@color/Transparent" android:layout_gravity="end|center_vertical" android:layout_marginEnd="10dp"
        android:layout_height="wrap_content" android:src="@drawable/icon_close" />
  </FrameLayout>

  <LinearLayout android:orientation="vertical"
      android:layout_width="match_parent" android:padding="20dp"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content" android:textColor="?BrushText" android:id="@+id/ChangelogDialogHeader"
        android:layout_height="wrap_content" android:text="v5.1.34.4 - 6.10.2019"/>
    <View style="@style/Divider" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/ChangelogDialogChangesList"
        android:layout_height="wrap_content" android:orientation="vertical"/>

  </LinearLayout>
</LinearLayout>