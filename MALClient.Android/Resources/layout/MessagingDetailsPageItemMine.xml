<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:alpha=".9"
    android:layout_width="match_parent" android:orientation="vertical" android:minHeight="40dp"
    android:layout_height="wrap_content">
  <FrameLayout
      android:layout_width="match_parent" android:layout_marginStart="20dp" android:padding="5dp"
      android:layout_height="wrap_content" android:background="@drawable/message_bubble_mine">
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content">
      <TextView android:textIsSelectable="true"
          android:layout_width="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:id="@+id/MessagingDetailsPageItemContent"
          android:layout_height="0dp" android:layout_weight="1" android:text="Hi!" android:textColor="?BrushText" android:textSize="@dimen/FontSizeMedium"/>
      <LinearLayout
          android:layout_width="match_parent" android:orientation="vertical"
          android:layout_height="wrap_content">
        <FFImageLoading.Views.ImageViewAsync android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/MessagingDetailsPageItemImage"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="wrap_content" style="@style/DateTextView" android:id="@+id/MessagingDetailsPageItemDate" android:layout_marginTop="5dp" android:textColor="?BrushSettingsSubtitle"
            android:layout_height="wrap_content" android:text="Feb 97, 2017" android:layout_gravity="end"/>
      </LinearLayout>
    </LinearLayout>
  </FrameLayout>
</FrameLayout>

