<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

  <LinearLayout android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?BrushAnimeItemBackground"
      android:orientation="vertical">

    <FFImageLoading.Views.ImageViewAsync
        android:id="@+id/AnimeDetailsPageVideosDialogItemImage"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"/>

    <View
        style="@style/Divider"
        android:background="?AccentColour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?BrushAnimeItemInnerBackground">

      <TextView
          android:id="@+id/AnimeDetailsPageVideosDialogItemText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="PV1"
          android:textColor="?BrushText" />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>