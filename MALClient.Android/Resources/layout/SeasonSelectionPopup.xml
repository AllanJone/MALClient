<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">
  <Spinner android:id="@+id/SeasonSelectionPopupSeasonComboBox" android:layout_weight="1" android:layout_gravity="center_vertical"
      android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="70dp" />
  <Spinner android:id="@+id/SeasonSelectionPopupYearComboBox" android:layout_weight="1" android:layout_gravity="center_vertical"
      android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="70dp" />
  <ImageButton android:id="@+id/SeasonSelectionPopupAcceptButton" android:layout_width="50dp"
      android:layout_height="50dp" android:src="@drawable/icon_ok"
      android:background="?android:selectableItemBackground"/>
</LinearLayout>