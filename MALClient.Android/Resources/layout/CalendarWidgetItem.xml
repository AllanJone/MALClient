<FrameLayout android:layout_width="120dp"
             android:layout_height="150dp"
             android:clickable="true"
             android:focusable="true"
             android:id="@+id/Root"
             xmlns:tools="http://schemas.android.com/tools"
             android:padding="2dp" android:clipToPadding="false"
             xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:background="#f5f5f5"
               android:layout_width="match_parent" android:elevation="2dp"
               android:layout_height="match_parent" android:orientation="vertical">
    <ImageView android:layout_height="180dp" android:scaleType="centerCrop"
               android:layout_width="match_parent" android:adjustViewBounds="true" android:id="@+id/Image"/>
    <LinearLayout
      android:layout_width="match_parent" android:orientation="vertical"
      android:layout_height="50dp" android:layout_gravity="bottom">
      <FrameLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="#ff8c00"/>
      <LinearLayout
        android:layout_width="match_parent" android:background="#a8000000"
        android:layout_height="50dp" android:orientation="vertical" android:padding="5dp" android:gravity="center_vertical">
        <TextView android:id="@+id/Title"
                  android:layout_width="wrap_content" android:ellipsize="end" android:fontFamily="sans-serif-light" android:textSize="14sp"
                  android:layout_height="wrap_content" android:maxLines="2" android:textColor="#fff" tools:text="Some fancy anime"/>
      </LinearLayout>
    </LinearLayout>

  </FrameLayout>
</FrameLayout>