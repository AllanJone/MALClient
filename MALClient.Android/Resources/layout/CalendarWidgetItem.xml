<FrameLayout android:layout_width="115dp"
             android:layout_height="155dp"
             android:paddingBottom="2dp" android:paddingTop="6dp"
             xmlns:tools="http://schemas.android.com/tools" android:clipToPadding="false"
             xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:background="#f5f5f5"
               android:layout_width="match_parent" android:elevation="2dp"
               android:layout_height="match_parent" android:orientation="vertical">
    <ImageView android:layout_height="160dp" android:scaleType="centerCrop" android:clickable="true" android:focusable="true"
               android:layout_width="match_parent" android:adjustViewBounds="true" android:id="@+id/Image"/>
    <LinearLayout
      android:layout_width="match_parent" android:orientation="vertical"
      android:layout_height="wrap_content" android:layout_gravity="bottom">
      <FrameLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="#ff8c00"/>
      <LinearLayout
        android:layout_width="match_parent" android:background="#a8000000"
        android:layout_height="wrap_content" android:orientation="vertical" android:padding="2dp">
        <TextView android:id="@+id/Title"
                  android:layout_width="wrap_content" android:ellipsize="end" android:fontFamily="sans-serif-light" android:textSize="12sp"
                  android:layout_height="wrap_content" android:maxLines="2" android:textColor="#fff" tools:text="Some fancy anime"/>
      </LinearLayout>
    </LinearLayout>
  </FrameLayout>
</FrameLayout>