<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="315dp"
    android:layout_width="160dp"
    android:padding="2dp"
    android:orientation="vertical">
  <FrameLayout
      android:layout_width="match_parent" android:id="@+id/PromoVideosPageItemImageSection"
      android:layout_height="270dp" android:clickable="true" android:focusable="true"
      android:foreground="?selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp" android:background="?BrushAnimeItemInnerBackground">
      <ProgressBar android:scaleX=".7" android:scaleY=".7"
          android:layout_width="wrap_content" android:id="@+id/PromoVideosPageItemImgPlaceholder"
          android:layout_height="wrap_content" android:indeterminateTint="?BrushAnimeItemBackground"
          android:indeterminate="true" android:layout_centerInParent="true" android:indeterminateTintMode="src_in"/>
      <FFImageLoading.Views.ImageViewAsync android:id="@+id/PromoVideosPageItemImage"
          android:layout_width="match_parent" android:scaleType="centerCrop"
          android:layout_height="match_parent" />
    </RelativeLayout>
  </FrameLayout>
  <View style="@style/Divider" android:background="?AccentColour" />
  <FrameLayout
      android:layout_width="match_parent" android:id="@+id/PromoVideosPageItemSubtitleSection"
      android:layout_height="45dp" android:clickable="true" android:focusable="true"
      android:foreground="?selectableItemBackground" android:background="?BrushAnimeItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
      <TextView android:id="@+id/PromoVideosPageItemSubtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:text="PV1"
          android:layout_margin="5dp" android:textColor="?BrushText" />
    </LinearLayout>
  </FrameLayout>
</LinearLayout>