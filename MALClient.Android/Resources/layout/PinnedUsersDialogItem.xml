<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:clickable="true" android:focusable="true" android:foreground="?selectableItemBackground"
             android:background="?BrushAnimeItemInnerBackground">
  <LinearLayout android:layout_width="match_parent" android:padding="10dp" android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:background="@drawable/border_accent_left">
    <FFImageLoading.Views.ImageViewAsync android:layout_gravity="center_vertical" android:layout_width="50dp"
                                         android:layout_height="50dp" android:src="@drawable/icon_tag" android:id="@+id/ProfileImg" />
    <TextView android:id="@+id/Name" android:layout_width="0dp" android:textAlignment="center"
              android:layout_height="wrap_content" android:layout_weight="1" android:text="Crazy"
              android:textColor="?BrushText" android:textSize="@dimen/FontSizeMedium" android:layout_marginStart="5dp"
              android:layout_gravity="center_vertical" android:gravity="center_horizontal" android:layout_marginEnd="5dp"/>
    <ImageButton android:id="@+id/DeleteButton" android:layout_width="40dp" android:layout_gravity="center_vertical"
                 android:layout_height="40dp" android:background="?android:selectableItemBackground"
                 android:src="@drawable/icon_unpin" />
  </LinearLayout>
</FrameLayout>