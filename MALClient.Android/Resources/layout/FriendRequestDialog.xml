<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:layout_height="match_parent"
             android:orientation="vertical" android:background="@drawable/dialog_corner_background" android:elevation="2dp">

  <LinearLayout
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout android:padding="8dp" android:elevation="2dp" android:background="?BrushAnimeItemInnerBackground"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
      <FFImageLoading.Views.ImageViewAsync android:id="@+id/Image"
                                           android:layout_width="50dp" android:scaleType="centerCrop"
                                           android:layout_height="50dp" />
      <TextView
        android:layout_width="0dp" android:layout_weight="1" android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" android:gravity="center" android:textSize="@dimen/FontSizeHuge"
        android:fontFamily="@string/font_family_light" android:text="Send Friend Request" android:textColor="?BrushText" />
    </LinearLayout>

    <EditText android:layout_margin="12dp" android:id="@+id/TextBox"
              android:layout_width="match_parent" android:fontFamily="@string/font_family_light" android:hint="Message (optional)"
              android:layout_height="wrap_content" />
    <Button android:id="@+id/SubmitButton"
            android:layout_width="wrap_content" android:layout_marginEnd="8dp"
            android:layout_height="wrap_content" android:text="Send" android:textAllCaps="false"
            android:backgroundTint="?AccentColour" android:textColor="#fff" android:layout_gravity="end" />
  </LinearLayout>



</FrameLayout>