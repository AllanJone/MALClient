<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:orientation="vertical"
  android:layout_height="match_parent" android:background="?BrushDeepBackground">
  <ListView
    android:id="@+id/NotificationHubPageList"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_gravity="top"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:clipToPadding="false"
    android:choiceMode="none" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
    android:dividerHeight="7dp" android:divider="@color/Transparent" />
  <ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminate="true" android:layout_centerInParent="true" android:id="@+id/NotificationHubPageLoadingSpinner"/>
  <android.support.design.widget.FloatingActionButton android:id="@+id/NotificationHubPageActionButton"
                                                      android:layout_width="wrap_content" app:backgroundTint="?AccentColourContrast" android:layout_alignParentEnd="true" android:layout_alignParentBottom="true" android:layout_margin="16dp"
                                                      android:layout_height="wrap_content" android:src="@drawable/icon_filter" android:tint="#fff" android:clickable="true" android:focusable="true"
                                                      xmlns:app="http://schemas.android.com/apk/res-auto" app:fabSize="normal" />
</RelativeLayout>