<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/border_accent_left"
              android:paddingStart="3dp"
              android:orientation="horizontal">


  <FrameLayout
    android:layout_width="0dp" android:background="?BrushAnimeItemBackground" android:id="@+id/NotificationHubPageItemLeftContainer"
    android:layout_height="match_parent" android:clickable="true" android:focusable="true" android:foreground="?selectableItemBackground"
    android:layout_gravity="center_vertical"
    android:layout_weight="1" android:elevation="5dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
        android:id="@+id/NotificationHubPageItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="ICO"
        android:textColor="?BrushText"
        android:textSize="@dimen/FontSizeMedium" />

      <TextView
        android:id="@+id/NotificationHubPageItemContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:text="Shingeki no Bahamut: Genesis - Short Story (ONA) has just been added to MAL Database!"
        android:textColor="?BrushText" />
    </LinearLayout>

  </FrameLayout>

  <FrameLayout
    android:id="@+id/NotificationHubPageItemMarkReadButton"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackgroundBorderless">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?BrushAnimeItemInnerBackground"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingTop="10dp">

      <TextView
        android:id="@+id/NotificationHubPageItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_light"
        android:text="Apr 12, 19:43 PM"
        android:textSize="@dimen/FontSizeTiny"
        android:textStyle="italic" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="?AccentColourDark"
        android:src="@drawable/icon_double_check"
        android:tint="?AccentColour" />
    </LinearLayout>
  </FrameLayout>

</LinearLayout>