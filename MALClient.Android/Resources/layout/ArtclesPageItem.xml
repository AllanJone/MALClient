<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:focusable="true"
             android:foreground="?android:selectableItemBackground"
             android:padding="10dp">
  <RelativeLayout android:background="?BrushAnimeItemBackground" android:paddingTop="10dp" android:paddingStart="5dp"
                  android:paddingBottom="10dp" android:paddingEnd="5dp" android:layout_width="match_parent"
                  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/ArticlesPageItemInfoSection" android:layout_width="130dp"
                  android:layout_height="wrap_content" android:orientation="vertical">
      <FFImageLoading.Views.ImageViewAsync android:id="@+id/ArticlesPageItemImage" android:layout_width="130dp"
                                           android:layout_height="130dp" android:scaleType="centerCrop" />
      <TextView android:id="@+id/ArticlesPageItemAuthor" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="by Someguy83"
                android:fontFamily="@string/font_family_light" android:textColor="?BrushText"
                android:layout_marginTop="5dp" />
      <TextView android:id="@+id/ArticlesPageItemViews" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="5,123 views" android:textColor="?BrushText"
                android:layout_marginTop="3dp" />
      <TextView android:id="@+id/ArticlesPageItemTags" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Quoutes, Cold hearted, Love, Plot Twist"
                android:textColor="?AccentColour" android:fontFamily="@string/font_family_light"
                android:textStyle="italic" android:textSize="@dimen/FontSizeSemiNormal" android:maxLines="2"
                android:ellipsize="end" android:layout_marginTop="2dp" />
    </LinearLayout>
    <LinearLayout android:layout_toEndOf="@+id/ArticlesPageItemInfoSection" android:paddingStart="10dp"
                  android:layout_width="match_parent" android:orientation="vertical"
                  android:layout_height="wrap_content">
      <TextView android:id="@+id/ArticlesPageItemHeader" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What does &quot;Sugoi&quot; Mean? Really What could it mean it's an old mystery of the new gods..."
                android:maxLines="2" android:ellipsize="end" android:textSize="@dimen/FontSizeBig"
                android:fontFamily="@string/font_family_light" android:textStyle="bold" android:textColor="?BrushText" />
      <View android:layout_marginStart="5dp" android:layout_marginEnd="5dp" style="@style/Divider"
            android:layout_marginTop="5dp" />
      <TextView android:id="@+id/ArticlesPageItemHighlight" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp"
                android:fontFamily="@string/font_family_light" android:maxLines="9" android:ellipsize="end"
                android:textColor="?BrushText" />
    </LinearLayout>
  </RelativeLayout>
</FrameLayout>