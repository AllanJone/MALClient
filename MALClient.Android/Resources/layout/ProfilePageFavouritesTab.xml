<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
  <GridView
    android:id="@+id/ProfilePageFavouritesTabGridView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:numColumns="auto_fit"
    android:layout_gravity="center"
    android:choiceMode="singleChoice" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/AppBarBtnHeight"
    android:background="?BrushAppBars">
    <RadioGroup
      android:layout_width="match_parent" android:orientation="horizontal"
      android:layout_height="wrap_content" android:gravity="center_horizontal">
      <ToggleButton android:id="@+id/ProfilePageFavouritesTabAnimeToggleButton"
                    android:layout_width="wrap_content" android:textOn="Anime" android:textOff="Anime" android:textAllCaps="false"
                    android:layout_height="wrap_content" android:checked="false" android:background="@drawable/transparent_toggle_button"/>
      <ToggleButton android:id="@+id/ProfilePageFavouritesTabMangaToggleButton"
                    android:layout_width="wrap_content" android:textOn="Manga" android:textOff="Manga" android:textAllCaps="false"
                    android:layout_height="wrap_content" android:checked="false" android:background="@drawable/transparent_toggle_button"/>
      <ToggleButton android:id="@+id/ProfilePageFavouritesTabCharactersToggleButton"
                    android:layout_width="wrap_content" android:textOn="Characters" android:textOff="Characters" android:textAllCaps="false"
                    android:layout_height="wrap_content" android:checked="false" android:background="@drawable/transparent_toggle_button"/>
      <ToggleButton android:id="@+id/ProfilePageFavouritesTabPeopleToggleButton"
                    android:layout_width="wrap_content" android:textOn="People" android:textOff="People" android:textAllCaps="false"
                    android:layout_height="wrap_content" android:checked="false" android:background="@drawable/transparent_toggle_button"/>
    </RadioGroup>
  </FrameLayout>
</LinearLayout>