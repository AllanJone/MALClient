<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:background="?BrushAnimeItemBackground"
             android:layout_height="wrap_content"  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent" android:background="@drawable/border_accent_left_wide" android:orientation="vertical"
    android:layout_height="match_parent" android:padding="20dp">
    <TextView android:id="@+id/TextInputDialogTitle"
              android:layout_width="wrap_content" android:text="Title" android:textColor="?BrushText"
              android:layout_height="wrap_content" android:textSize="@dimen/FontSizeHuge"/>
    <EditText android:id="@+id/TextInputDialogTextBox" android:textColorHint="?BrushSettingsSubtitle"
              android:layout_width="match_parent" android:maxLines="1" android:layout_marginTop="10dp"
              android:layout_height="wrap_content" />
    <Button android:layout_gravity="end" android:layout_marginTop="5dp" android:id="@+id/TextInputDialogAcceptButton"
            android:layout_width="wrap_content" android:backgroundTint="?AccentColourLight" android:drawableTint="#fff"
            android:layout_height="wrap_content" android:drawableLeft="@drawable/icon_ok" android:text="Accept" android:textColor="#fff"/>
  </LinearLayout>
</FrameLayout>