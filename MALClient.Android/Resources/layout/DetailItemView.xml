<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" android:paddingTop="2dp" android:paddingBottom="2dp">
  <FrameLayout
    android:layout_width="match_parent" android:id="@+id/DetailItemRootContainer"
    android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:minHeight="40dp"
                  android:layout_gravity="center" android:background="@drawable/border_accent_rightleft"
                  android:layout_height="match_parent" android:orientation="horizontal" android:weightSum="20">
      <TextView android:layout_margin="5dp" android:layout_weight="5" android:id="@+id/DetailItemCategoryTextView"
                android:layout_gravity="center" android:layout_width="0dp" android:textAlignment="center"
                android:gravity="center" android:layout_height="wrap_content" android:textSize="@dimen/FontSizeNormal"
                android:textColor="?BrushText" android:text="Adventure" />
      <TextView android:layout_margin="5dp" android:layout_weight="15" android:ellipsize="end" android:maxLines="2"
                android:id="@+id/DetailItemContentTextView" android:layout_width="0dp" android:textAlignment="center"
                android:gravity="center" android:fontFamily="@string/font_family_light" android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" android:textSize="@dimen/FontSizeNormal"
                android:textColor="?BrushText" android:text="" />
    </LinearLayout>
  </FrameLayout>
</FrameLayout>